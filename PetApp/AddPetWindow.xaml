<Window x:Class="PetApp.AddPetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetApp"
        mc:Ignorable="d"
        Title="Add New Pet" Height="400" Width="300" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Name -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

            <!-- Mood -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

            <!-- Energy -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

            <!-- Hunger -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

            <!-- Weight -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

            <!-- Fluffiness -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

            <!-- Buttons -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Name -->
        <Label Grid.Row="0" Content="Name:"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1" Margin="0,0,0,10"/>

        <!-- Mood -->
        <Label Grid.Row="2" Content="Mood (1-100):"/>
        <TextBox x:Name="MoodTextBox" Grid.Row="3" Margin="0,0,0,10"/>

        <!-- Energy -->
        <Label Grid.Row="4" Content="Energy:"/>
        <TextBox x:Name="EnergyTextBox" Grid.Row="5" Margin="0,0,0,10"/>

        <!-- Hunger -->
        <Label Grid.Row="6" Content="Hunger:"/>
        <TextBox x:Name="HungerTextBox" Grid.Row="7" Margin="0,0,0,10"/>

        <!-- Weight -->
        <Label Grid.Row="8" Content="Weight (kg):"/>
        <TextBox x:Name="WeightTextBox" Grid.Row="9" Margin="0,0,0,10"/>

        <!-- Fluffiness -->
        <Label Grid.Row="10" Content="Fluffiness:"/>
        <ComboBox x:Name="FluffinessComboBox" Grid.Row="11" Margin="0,0,0,20">
            <ComboBoxItem Content="Not Fluffy"/>
            <ComboBoxItem Content="Slightly Fluffy"/>
            <ComboBoxItem Content="Medium" IsSelected="True"/>
            <ComboBoxItem Content="Fluffy"/>
            <ComboBoxItem Content="Very Fluffy"/>
            <ComboBoxItem Content="Extra Fluffy"/>
        </ComboBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="13" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Click="Cancel_Click" Width="80" Margin="5"/>
            <Button Content="Add" Click="Add_Click" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>